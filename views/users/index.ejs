<%- include('../partials/header') %>


<div class="row">
    <div class="col-md-12">
        <h2>All Users</h2>
        
        <% if (users.length === 0) { %>
            <p class="text-muted">No users found.</p>
        <% } else { %>
            <div class="list-group">
                <% users.forEach(u => { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/users/<%= u.id %>" class="text-decoration-none">
                                <strong><%= u.name %></strong>
                            </a>
                            <small class="text-muted ms-2"><%= u.email %></small>
                        </div>
                        <% if (user.isAdmin && u.id !== user.id) { %>
                            <form action="/users/<%= u.id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?')">delete</button>
                            </form>
                        <% } %>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
