<%- include('../partials/header') %>


<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <a href="/users/<%= profileUser.id %>">
                    <div class="profile-img-large mb-3"></div>
                </a>
                <h5><%= profileUser.name %></h5>
                <a href="/users/<%= profileUser.id %>" class="btn btn-outline-primary btn-sm">view my profile</a>
                
                <div class="mt-3">
                    <div><strong><%= postCount %></strong> microposts</div>
                    <div>
                        <a href="/users/<%= profileUser.id %>/following" class="text-decoration-none">
                            <strong><%= followingCount %></strong> following
                        </a>
                    </div>
                    <div>
                        <a href="/users/<%= profileUser.id %>/followers" class="text-decoration-none">
                            <strong><%= followersCount %></strong> followers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <h3>Followers</h3>
        <% if (followers.length === 0) { %>
            <p class="text-muted">No followers yet.</p>
        <% } else { %>
            <div class="list-group">
                <% followers.forEach(followerUser => { %>
                    <div class="list-group-item">
                        <a href="/users/<%= followerUser.id %>" class="text-decoration-none">
                            <strong><%= followerUser.name %></strong>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
