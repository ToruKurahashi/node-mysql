<%- include('../partials/header') %>


<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <a href="/users/<%= profileUser.id %>">
                    <div class="profile-img-large mb-3"></div>
                </a>
                <h5><%= profileUser.name %></h5>
                <% if (isOwnProfile) { %>
                    <a href="/users/<%= profileUser.id %>" class="btn btn-outline-primary btn-sm">view my profile</a>
                <% } %>
                
                <div class="mt-3">
                    <div><strong><%= postCount %></strong> microposts</div>
                    <div>
                        <a href="/users/<%= profileUser.id %>/following" class="text-decoration-none">
                            <strong><%= followingCount %></strong> following
                        </a>
                    </div>
                    <div>
                        <a href="/users/<%= profileUser.id %>/followers" class="text-decoration-none">
                            <strong><%= followersCount %></strong> followers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <% if (!isOwnProfile) { %>
            <div class="mb-3">
                <% if (isFollowing) { %>
                    <form action="/users/<%= profileUser.id %>/unfollow" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary">Unfollow</button>
                    </form>
                <% } else { %>
                    <form action="/users/<%= profileUser.id %>/follow" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-primary">Follow</button>
                    </form>
                <% } %>
            </div>
        <% } %>

        <h3>Micropost Feed</h3>
        <% if (microposts.length === 0) { %>
            <p class="text-muted">No posts yet.</p>
        <% } else { %>
            <% microposts.forEach(post => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <a href="/users/<%= post.user_id %>">
                                <div class="profile-img me-3"></div>
                            </a>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <a href="/users/<%= post.user_id %>" class="text-decoration-none">
                                            <strong><%= post.user_name %></strong>
                                        </a>
                                        <small class="text-muted ms-2"><%= new Date(post.created_at).toLocaleString() %></small>
                                    </div>
                                    <% if (isOwnProfile) { %>
                                        <form action="/microposts/<%= post.id %>/delete" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this post?')">delete</button>
                                        </form>
                                    <% } %>
                                </div>
                                <p class="mt-2 mb-0"><%= post.content %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
